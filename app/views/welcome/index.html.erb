<h1>Welcome to Pickomino</h1>

<p>List of Games</p>
<table>
    <tr>
        <th>Id</th>
    </tr>
    <% @games.all.each do |game| %>
        <tr>
            <td><%= game.id %></td>
            <td><%= link_to 'Join', game_path(game) %></td>
            <td><%= link_to 'Delete', game_path(game), method: :delete %></td>
        </tr>
    <% end %>
</table>

<%= link_to 'New Game', new_game_path %>

<p>List of Users</p>
<table>
    <tr>
        <th>Name</th>
        <th>Color</th>
    </tr>
    <% @users.all.each do |user| %>
        <tr>
            <td><%= user.name %></td>
            <td><%= user.color %></td>
            <td><%= link_to 'Edit', edit_user_path(user) %></td>
            <td><%= link_to 'Delete', user_path(user), method: :delete %></td>
        </tr>
    <% end %>
</table>

<%= link_to 'New User', new_user_path %>
